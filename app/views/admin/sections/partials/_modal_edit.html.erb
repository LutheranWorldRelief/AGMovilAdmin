<!-- Modal -->
<div class="modal fade" id="modal-edit" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <%= simple_form_for @section, url: admin_section_path(@section), method: :put do |f| %>
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Editar secci√≥n</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="form-group">
          <%= f.input :name, label: "Nombre", input_html: { class: 'form-control', required: true } %>
        </div>
        <div class="form-group">
          <%= f.input :guide_id, collection: Guide.all, label: "Guia", input_html: { class: 'form-control', required: true } %>
        </div>
        <div class="form-group">
          <%= f.input :order, label: "Orden", input_html: { class: 'form-control', required: true } %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cerrar</button>
        <%= f.button :submit, "Actualizar", class: "btn btn-raised btn-success" %>
      </div>
    </div>
  </div>
        <% end %>
</div>