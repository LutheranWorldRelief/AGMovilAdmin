<% content_for :select2 do %>
<link href="https://adminlte.io/themes/AdminLTE/bower_components/select2/dist/css/select2.min.css" rel="stylesheet" />
<% end %>
<script src="https://adminlte.io/themes/AdminLTE/bower_components/select2/dist/js/select2.full.min.js"></script>
<div class="container">
	<section class="content-header">
	  <h1>
	    Notificaciones
	    <small>Configurar notificaci√≥n</small>
	  </h1>
	</section>
	<br><br>

	<div class="row">
		<%= render partial: "admin/massive_notifications/partials/filter" %>
		<div class="col-md-9">
			<div class="box box-solid">
				<div class="box-body">
					<%= simple_form_for @massive_notification, url: admin_massive_notification_path(@massive_notification), method: :put, remote: true do |f| %>
						<div class="form-group">
							<%= f.input :title, label: "Titulo", input_html: { class: "form-control", maxlength: "50" } %>
						</div>
						<div class="form-group">
							<%= f.input :message, label: "Mensaje", input_html: { class: "form-control", maxlength: "160" } %>
						</div>
							<div id="big_picture">
								<%= render partial: "admin/massive_notifications/partials/big_picture" %>
								<div class="form-group">
								<% unless @massive_notification.big_picture.present? %>
									<%= f.input :big_picture, as: :file,  label: "Imagen de fondo", input_html: { class: "form-control" } %>
								<% end %>
							</div>
							</div>
						<%#= render partial: "admin/massive_notifications/partials/select_customers", locals: { f: f } %>
							<%= f.submit "Actualizar", class: "btn btn-primary save" %>
						<div id="config"></div>
					<% end %>
				</div>
				<div class="box-footer">
					<%= render partial: "admin/massive_notifications/partials/send_button" %>
					<%= link_to "Cancelar", admin_massive_notifications_path, class: "btn bg-navy" %>
					<%= link_to "<i class='fa fa-trash'></i>".html_safe, move_trash_admin_massive_notification_path(@massive_notification), method: :put , class: "btn btn-danger" %>
				</div>
			</div>
		</div>
	</div>
</div>
<style>
	.img-content{
		width: 20%;
		background-color: #ccc;
		padding: 5px;
		border-radius: 4px;
	}
	.img-content:hover{
		background-color: red;
		opacity: 0.2;
	}
</style>
