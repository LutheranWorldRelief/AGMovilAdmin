<div class="row">
  <div class="col-md-6">
    <div class="form-group">
      <%= f.input :name, label: "Nombre", input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= f.input :description, label: "Descripción", input_html: { class: "form-control" } %>
    </div>
  </div>
  <div class="col-md-6">
    <div class="form-group">
      <%= f.input :title, label: "Titulo", input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= f.input :order, label: "Orden", input_html: { class: "form-control" } %>
    </div>
    <div class="form-group">
      <%= f.input :section_id, collection: Guide.all, as: :grouped_select, group_method: :sections, label: "Sección", input_html: { class: "form-control" } %>
    </div>
  </div>
  <div class="col-md-12">
    <div class="form-group">
      <%= f.cktext_area :content, label: false, input_html: { class: "form-control" } %>
    </div>
  </div>
</div>

<script type="text/javascript">
  CKEDITOR.config.extraPlugins = "base64image";
  CKFinder.setupCKEditor();
  CKEDITOR.replace('article_content', {
    addPlugins: "base64image"
  });
  console.log("entra");
</script>
