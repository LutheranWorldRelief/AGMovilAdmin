      <%= f.input :password,
                  required: true,
                  label: "Contrase침a",
                  hint: ("#{@minimum_password_length} caracteres tama침o minimo" if @minimum_password_length),
                  input_html: { class: "form-control", autocomplete: "new-password" } %>
    </div>
    <div class="form-group">
      <%= f.input :password_confirmation,
                  required: true,
                  label: "Confirmar contrase침a",
                  input_html: { class: "form-control", autocomplete: "new-password" } %>
    </div>
    <div class="form-group">
      <%= f.button :submit, "Registrarme", class: "btn btn-raised btn-primary" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
